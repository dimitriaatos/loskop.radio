{
	"root": true,
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	// "parserOptions": {
	// 	"parser": "@babel/eslint-parser"
	// },
	"extends": ["eslint:recommended", "plugin:vue/recommended", "plugin:jsonc/recommended-with-json"],
	"plugins": ["vue"],
	"rules": {
		"vue/max-attributes-per-line": [1, {
			"singleline": 2,
			"multiline": {
				"max": 1,
				"allowFirstLine": false
			}
		}],
		"indent": [2, "tab"],
		"linebreak-style": [2, "unix"],
		"quotes": [2, "single"],
		"semi": [2, "never"],
		"no-unused-vars": [1],
		"no-tabs": [0],
		"no-multi-spaces": [2],
		"no-trailing-spaces": [2],
		"no-mixed-spaces-and-tabs": [2],
		"vue/script-indent": [2, "tab", {
			"baseIndent": 0,
			"switchCase": 0,
			"ignores": []
		}],
		"vue/html-indent": [2, "tab", {
			"attribute": 1,
			"baseIndent": 1,
			"closeBracket": 0,
			"alignAttributesVertically": true,
			"ignores": []
		}],
		"vue/mustache-interpolation-spacing": ["error", "always"],
		"vue/require-default-prop": [0],

		"jsonc/indent": ["error",
			"tab",
			{}
		]
	}
}